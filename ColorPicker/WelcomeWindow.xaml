<Window x:Class="ColorPicker.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPicker"
        mc:Ignorable="d"
        Title="WelcomeWindow" WindowStartupLocation="CenterScreen" Width="400" Height="200" Background="#202020" WindowStyle="None" BorderThickness="0" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Color Picker installed and ready to use!" FontSize="22" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Light" Foreground="White"/>
            <Button Margin="0,20,0,0" Content="Let's go!" FontSize="20" Click="Button_Click"/>
        </StackPanel>
        <Border BorderBrush="#505050" BorderThickness="3,0,3,0"/>
    </Grid>
    
</Window>
